@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <!-- Carousel Indicators -->
        <ol class="carousel-indicators">
            <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"></li>
            <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"></li>
            <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"></li>
        </ol>

        <!-- Carousel Images with Reduced Size -->
        <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="5000">
                <img src="~/images/slide1.jpg" class="d-block mx-auto img-fluid" alt="First slide - product showcase" style="height: 300px; width: 800px; object-fit: cover;">
            </div>

            <div class="carousel-item">
                <img src="~/images/slide2.jpg" class="d-block mx-auto img-fluid" alt="Second slide - featured sale" style="height: 300px; width: 800px; object-fit: cover;">
            </div>

            <div class="carousel-item">
                <img src="~/images/slide3.jpg" class="d-block mx-auto img-fluid" alt="Third slide - customer reviews" style="height: 300px; width: 800px; object-fit: cover;">
            </div>
        </div>

        <!-- Carousel Controls -->
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </a>

        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </a>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#carouselExampleIndicators').carousel({
                interval: 2000  // Slide every 2 seconds
            });
        });
    </script>
}
