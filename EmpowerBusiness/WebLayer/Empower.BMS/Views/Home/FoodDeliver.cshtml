@{
    ViewData["Title"] = "Food Delivery";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Delivery</title>
    <link href="~/css/fooddelivery.css" rel="stylesheet" />
    @* <script src="~/js/foodscript.js"></script> *@
    
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="logo">Foodie</div>
        <input type="text" class="search-bar" placeholder="Search for restaurants or dishes...">
        <nav>
            <ul class="nav-links">
                <li><a href="#home">Home</a></li>
                <li><a href="#restaurants">Restaurants</a></li>
                <li><a href="#cart">Cart</a></li>
            </ul>
        </nav>
    </header>

    <!-- Main Content -->
    <main>
        <!-- Restaurant List -->
        <section id="restaurants" class="restaurant-section">
            <h2>Popular Restaurants</h2>
            <div class="restaurant-list" id="restaurant-list"></div>
        </section>

        <!-- Cart Section -->
        <section id="cart" class="cart-section">
            <h2>Your Cart</h2>
            <div class="cart-items" id="cart-items"></div>
            <div class="cart-total">
                <h3>Total: $<span id="cart-total">0</span></h3>
            </div>
        </section>
    </main>

    <script src="~/js/script.js"></script>
</body>
</html>


